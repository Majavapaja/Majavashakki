{
  "version": "^3.0.1",
  "compilerOptions": {
    "strictFunctionTypes": true,
    "target": "es6",
    "lib": ["es6", "es2017", "DOM"],
    "moduleResolution": "node",
    "jsx": "preserve",
    "sourceMap": true,
    "rootDirs": ["src", "test"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "common/*": ["./src/common/*"],
      "server/*": ["./src/server/*"],
      "client/*": ["./src/client/*"]
    },
    "experimentalDecorators": true
  }
}
