    "@types/express": "^4.17.3",
    "@types/express-session": "^1.17.0",
    "@types/express-socket.io-session": "^1.3.2",
    "@types/mocha": "^7.0.2",
    "@types/mongodb": "^3.5.2",
    "@types/mongoose": "^5.7.6",
    "@types/passport": "^1.0.3",
    "@types/passport-facebook": "^2.1.9",
    "@types/passport-local": "^1.0.33",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/react-router-dom": "^5.1.3",
    "@types/request-promise": "^4.1.45",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "classnames": "^2.2.6",
    "connect-mongo": "^3.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "express-socket.io-session": "^1.3.5",
    "io-ts": "^1.10.4",
    "jss": "^10.0.4",
    "jss-global": "^3.0.0",
    "mobx": "^5.15.4",
    "mobx-react": "^6.1.8",
    "mongodb": "^3.5.5",
    "mongoose": "^5.9.4",
    "passport": "^0.4.1",
    "passport-facebook": "^3.0.0",
    "passport-local": "^1.0.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-jss": "^10.0.4",
    "react-router-dom": "^5.1.2",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "npm-check": "npm-check --skip-unused",
    "tsc": "tsc",
    "dev": "better-npm-run dev",
    "watch:client": "parcel watch src/client/index.html --public-url /",
    "watch:server": "nodemon --watch src --watch public --ext ts,tsx --ignore src/client app.js",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "build": "parcel build src/client/index.html --public-url /",
    "start": "node app.js",
    "test": "better-npm-run test",
    "test:browser": "better-npm-run test:browser",
    "test:watch": "nodemon --watch src --watch test --ext ts,tsx --exec npm test || true"
  },
  "betterScripts": {
    "dev": {
      "command": "npm-run-all --parallel watch:client watch:server",
      "env": {
        "MajavashakkiSessionSecret": "majestetic"
      }
    },
    "test": {
      "command": "mocha --require mocha_tsnode_hax.js test/**/*.spec.ts",
      "env": {
        "DATABASE_NAME": "Testishakki",
        "MajavashakkiSessionSecret": "majestetic"
      }
    },
    "test:browser": {
      "command": "mocha --require mocha_tsnode_hax.js test/**/*.browser.ts",
      "env": {
        "DATABASE_NAME": "Testishakki",
        "MajavashakkiSessionSecret": "majestetic"
      }
    }
  },
  "devDependencies": {
    "@types/classnames": "^2.2.10",
    "better-npm-run": "^0.1.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "factory-girl": "^5.0.4",
    "mocha": "^7.1.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "puppeteer": "^2.1.1",
    "tslint": "^5.20.1",
    "tslint-react": "^4.2.0"
  }
}
