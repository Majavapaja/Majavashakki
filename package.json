  "author": "Majavapaja",
  "private": true,
  "license": "BSD",
  "browserslist": [
    "last 1 Chrome version",
    "Firefox ESR",
    "last 1 safari version",
    "last 1 opera version",
    "last 1 edge version"
  ],
  "dependencies": {
    "@material-ui/core": "^4.9.5",
